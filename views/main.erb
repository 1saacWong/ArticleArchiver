<h1>Welcome, <%=@user.name%>!</h1>
<a href="/logout">Log Out</a>

<%= @nav %>

<form id="search" action="/search">
  <label>Search:</label>
  <input type="text" name="user_name" id="user_name" required=true/>
  <select id="search_option" name="search_option">
    <% @stores.each() do |store| %>
      <option value="<%= store.id() %>"><%= store.name() %></option>
    <% end %>
  </select>
  <button>Search</button>
</form>


<h2>The list of bookmark below:</h2>
<% if @articles.any? %>
  <ul>
    <% @articles.each do |article| %>
      <li><%= article.title%>, <%= article.link%>, <% article.tags.each do |tag| %><%= tag.name%><% end %></li>
    <% end %>
  </ul>
<% end %>
