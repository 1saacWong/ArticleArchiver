<nav>
  <div>
    <a href="/main">Home</a>
    <form action="/articles" method="post">
      <h3>Share new article</h3>
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control">
      </div>
      <div class="form-group">
        <label for="link">Link</label>
        <input type="text" name="link" class="form-control">
      </div>
      <div class="form-group">
        <label for="shared_by">Shared by</label>
        <input type="text" name="shared_by" class="form-control">
      </div>
      <% if @tags.any? %>
      <label for="tag_ids[]">Select A tag</label>
        <select multiple class="form-control" name="tag_ids[]">
          <% @tags.each do |tag| %>
            <option value="<%= tag.id%>"><%= tag.name%></option>
          <% end %>
        </select>
      <% end %>
      <label for="tag_create">Or Create One Yourself</label>
      <input type="text" name="tag_create" class="form-control">
      <button type="submit" class="btn btn-success">Share</button>
    </form>
  </div>
  <div>
    <p>tag</p>
    <ul>
      <li>
        <% if @tags.present? %>
        <% @tags.each do |tag| %>
        <li><a href="/tags/<%= tag.id()%>"><%= tag.name %><% end %></a></li>
    <% else %>
      <li>There are no articles containing the term(s) </li>
    <% end %>
    </ul>
  </div>
  <div>
    <p>favorite</p>
    <ul>
      <li><a href="/favorites/:id">most_favorite_1</a></li>
      <li><a href="/favorites/:id">most_favorite_2</a></li>
    </ul>
  </div>
</nav>
